<div id="menu" class="ui menu inverted">
  <%= link_to "Главная", root_path, class: 'item' %>
  <%= link_to 'Онлайн заявка на кредит', new_online_credit_path, class: 'item' if current_user.nil? %>
  <%= link_to 'Оформление кредита', new_bank_credit_path, class: 'item' if can? :manage, ClientCredit %>
  <%= link_to 'Одобрение кредита', credit_administrate_index_path, class: 'item' if can? :manage, ClientCredit %>
  <%= link_to 'Управление кредитами', operator_credits_path, class: 'item' if can? :manage, Credit %>
  <%= link_to 'Управление пользователями', operator_users_path, class: 'item' if can? :manage, User %>
