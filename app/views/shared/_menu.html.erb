<% end %>

  <% if current_user %>
      <%= link_to 'Счета', accounts_path, class: 'item' if current_user.is? 'client' %>
      <%= link_to 'Карточки', cards_path, class: 'item' if current_user.is? 'client' %>
  <% end %>
  <div class="right menu">
    <% if current_user %>
        <%= link_to "Выход (#{current_user.name})", log_out_path, class: 'item' %>
    <% else %>
        <%= link_to "Войти", log_in_path, class: 'item' %>
    <% end %>
