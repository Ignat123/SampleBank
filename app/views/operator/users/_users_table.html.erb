<% if users.any? %>
    <div class="ui vertical accordion menu">
      <div class="item">
        <a class="title">
          <i class="dropdown icon"></i>
          <%= users_type %>:
        </a>

        <div class="content">
          <table class="sortable">
            <tr>
              <td>Id</td>
              <td>Имя</td>
              <td>Ссылка</td>
            </tr>
            <% users.each do |user| %>
                <tr>
                  <td>
                    <%= user.id %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to "Перейти", '#' %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <%= render partial: "paginator/paginator", locals: {pageCount: total_pages, currentPage: current_page, maxPerPageCount: 15, path: "#", param_id: param_id} %>
<% end %>
